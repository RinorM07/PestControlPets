<header class="header">
  <%= link_to "< Home page", root_path %>
</header>
<div class="grid">
  <div class="pet-card">
    <h2><%= @pet.name %></h2>
    <p><%= @pet.race %></p>
    <p>$<%= @pet.price_per_day %> per day</p>
    <p><%= @pet.targets %></p>
    <p><%= @pet.description %></p>
    <p><%= link_to "This Animal is no longer available", pet_path(@pet), class: "btn btn-primary btn-sm", data: { "turbo-confirm": 'Are you sure?', turbo_method: :delete } %></p>
  </div>

<% if @pet.user == current_user %>
      <div class="pet-actions">
        <%= link_to "Edit Hunting Preferences", edit_pet_path(@pet), class: "btn btn-primary" %>
      </div>
    <% end %>

</div>
